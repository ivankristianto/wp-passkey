{
	"root": true,
	"extends": [ "plugin:@wordpress/eslint-plugin/recommended", "prettier" ],
	"parserOptions": {
		"requireConfigFile": false
	},
	"rules": {
		"comma-dangle": [ "error", "always-multiline" ],
		"camelcase": "off",
		"jsdoc/require-jsdoc": [
			"error",
			{
				"require": {
					"FunctionDeclaration": true
				}
			}
		]
	},
	"settings": {
		"jsdoc": {
			"mode": "typescript"
		},
		"import/resolver": {
			"node": {
				"extensions": [".js", ".jsx", ".ts", ".tsx"]
			}
		},
		"import/core-modules": ["@wordpress/api-fetch", "@wordpress/dom-ready", "@wordpress/i18n"]
	}
}
