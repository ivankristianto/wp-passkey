{
  "name": "@ivankristianto/wp-passkey",
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "build": "npm run clean && rollup -c",
    "clean": "rimraf assets/dist",
    "lint:js": "eslint './assets/src/' --ext .js",
    "lint:php": "composer lint",
    "lint": "npm run lint:js && npm run lint:php",
    "test-unit-php": "wp-env run phpunit 'phpunit -c /var/www/html/wp-content/plugins/wp-passkey/phpunit.xml.dist --verbose'",
    "release": "composer install --no-dev --ignore-platform-reqs && npm run build && ./bin/release",
    "server": "wp-env"
  },
  "devDependencies": {
    "@babel/core": "^7.21.8",
    "@babel/eslint-parser": "^7.21.8",
    "@rollup/plugin-terser": "^0.4.1",
    "@wordpress/babel-preset-default": "^6.4.1",
    "@wordpress/env": "^5.10.0",
    "@wordpress/eslint-plugin": "^14.5.0",
    "archiver": "^5.3.0",
    "eslint": "^8.39.0",
    "fs-extra": "^10.0.0",
    "prettier": "npm:wp-prettier@^2.8.5",
    "rimraf": "^3.0.2",
    "rollup": "^3.21.5",
    "sanitize-filename": "^1.6.3"
  },
  "dependencies": {
    "@simplewebauthn/browser": "^7.2.0"
  }
}
